{{ 'section-press-logos.css' | asset_url | stylesheet_tag }}
<script src="{{ 'section-press-logos.js' | asset_url }}" defer="defer"></script>

<div class="press-section">

  {%- if section.settings.heading != blank -%}
    <h3 class="press-heading">{{ section.settings.heading }}</h3>
  {%- endif -%}

  <div class="press-container">
    {%- for block in section.blocks -%}
      <div class="press-logo-item" {{ block.shopify_attributes }}>
        {%- if block.settings.logo != blank -%}
          {{ block.settings.logo | image_url: height: 60 | image_tag: class: 'press-logo-img', loading: 'lazy', alt: block.settings.logo.alt | default: 'Press Logo'
          }}
        {%- else -%}
          <!-- Placeholder SVG if no image -->
          {{ 'logo' | placeholder_svg_tag: 'press-logo-img' }}
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
  {
    "name": "Press / Featured In",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "AS SEEN ON"
      }
    ],
    "blocks": [
      {
        "type": "logo",
        "name": "Press Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Press Logos",
        "blocks": [
          {
            "type": "logo"
          },
          {
            "type": "logo"
          },
          {
            "type": "logo"
          },
          {
            "type": "logo"
          },
          {
            "type": "logo"
          },
          {
            "type": "logo"
          }
        ]
      }
    ]
  }
{% endschema %}