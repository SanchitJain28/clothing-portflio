{% comment %}
  Product Reviews Section - Maison Luxe
  Renders customer reviews with rating breakdown and filtering
{% endcomment %}

<section class="product-reviews" data-section-id="{{ section.id }}">
  {{ 'product-reviews.css' | asset_url | stylesheet_tag }}

  <div class="reviews-container">

    {%- if section.settings.show_heading -%}
      <h2 class="reviews-heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    <div class="reviews-summary">
      <div class="reviews-summary__rating">
        <div class="rating-score">
          <div class="rating-stars" data-rating="0"></div>
          <span class="rating-number">0</span>
        </div>
        <p class="review-count">Based on 0 reviews</p>
      </div>

      <div class="reviews-summary__breakdown">
        {%- for i in (1..5) reversed -%}
          <div class="rating-bar">
            <div class="rating-bar__stars">
              {%- render 'icon-star-rating'
                , rating: i -%}
            </div>
            <div class="rating-bar__track">
              <div class="rating-bar__fill" style="width: 0%"></div>
            </div>
            <span class="rating-bar__percentage">0%</span>
            <span class="rating-bar__count">(0)</span>
          </div>
        {%- endfor -%}
      </div>

      {%- if section.settings.show_write_review -%}
        <div class="reviews-summary__action">
          <button class="btn-write-review" type="button">
            {{ section.settings.write_review_text }}
          </button>
        </div>
      {%- endif -%}
    </div>

    <div class="reviews-filters">
      <div class="filter-group">
        <select class="filter-select" id="sortReviews">
          <option value="recent">Most Recent</option>
          <option value="helpful">Most helpful</option>
          <option value="rating-high">Highest rating</option>
          <option value="rating-low">Lowest rating</option>
        </select>
      </div>

      <div class="filter-group">
        <select class="filter-select" id="filterRating">
          <option value="all">All Stars</option>
          <option value="5">5 stars</option>
          <option value="4">4 stars</option>
          <option value="3">3 stars</option>
          <option value="2">2 stars</option>
          <option value="1">1 star</option>
        </select>
      </div>
    </div>

    <div class="reviews-list">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'review' -%}
            <article
              class="review-item"
              data-rating="{{ block.settings.rating }}"
              data-date="{{ block.settings.review_date }}"
              data-helpful-yes="{{ block.settings.helpful_yes | default: 0 }}"
              data-helpful-no="{{ block.settings.helpful_no | default: 0 }}"
              {{ block.shopify_attributes }}>


              <div class="review-body">
                <div class="review-avatar-body-wrapper">
                  <div class="review-avatar">
                    <span class="avatar-initial">{{ block.settings.author_name | slice: 0 | upcase }}</span>
                    {%- if block.settings.verified_buyer -%}
                      <span class="avatar-verified-icon">
                        <svg
                          width="12"
                          height="12"
                          viewBox="0 0 12 12"
                          fill="none">
                          <circle
                            cx="6"
                            cy="6"
                            r="6"
                            fill="#1a73e8" />
                          <path
                            d="M3.5 6l1.8 1.8 3.2-3.6"
                            stroke="#fff"
                            stroke-width="1.4"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                        </svg>
                      </span>
                    {%- endif -%}
                  </div>

                  <div class="">
                    <div class="review-meta">
                      <div class="review-rating" data-rating="{{ block.settings.rating }}">
                        {%- render 'icon-star-rating'
                          , rating: block.settings.rating -%}
                      </div>
                      <time class="review-date">{{ block.settings.review_date }}</time>
                    </div>

                    <div class="review-author">
                      {%- if block.settings.verified_buyer -%}
                        <span class="verified-badge">Verified</span>
                      {%- endif -%}
                      <strong class="author-name">{{ block.settings.author_name }}</strong>
                    </div>
                  </div>
                </div>


                {%- if block.settings.review_title != blank -%}
                  <h3 class="review-title">{{ block.settings.review_title }}</h3>
                {%- endif -%}

                <div class="review-content">
                  {{ block.settings.review_text }}
                </div>


                {%- if block.settings.show_helpful -%}
                  <div class="review-helpful">
                    <button class="helpful-btn" data-action="yes">
                      <svg viewBox="0 0 16 16" fill="none">
                        <path d="M2 7h3v7H2V7zm12-1c0-.55-.45-1-1-1h-3.17l.5-2.4c.02-.09.03-.18.03-.28 0-.21-.08-.41-.22-.55L9.7 1.33 5.35 5.68c-.19.19-.3.44-.3.71V13c0 .55.45 1 1 1h6c.41 0 .77-.25.92-.61l2-5C15.29 8.13 15 7.59 15 7V6z" fill="currentColor" />
                      </svg>
                      {{ block.settings.helpful_yes | default: 0 }}
                    </button>
                    <button class="helpful-btn" data-action="no">
                      <svg viewBox="0 0 16 16" fill="none">
                        <path d="M14 9h-3V2h3v7zM2 10c0 .55.45 1 1 1h3.17l-.5 2.4c-.02.09-.03.18-.03.28 0 .21.08.41.22.55l.44.44 4.35-4.35c.19-.19.3-.44.3-.71V3c0-.55-.45-1-1-1H4c-.41 0-.77.25-.92.61l-2 5C.71 7.87 1 8.41 1 9v1z" fill="currentColor" />
                      </svg>
                      {{ block.settings.helpful_no | default: 0 }}
                    </button>
                  </div>
                {%- endif -%}
              </div>

            </article>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    {%- if section.settings.show_load_more -%}
      <div class="reviews-load-more">
        <button class="btn-load-more" type="button">
          {{ section.settings.load_more_text }}
        </button>
      </div>
    {%- endif -%}

  </div>

  <script src="{{ 'product-reviews.js' | asset_url }}" defer></script>
</section>


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
